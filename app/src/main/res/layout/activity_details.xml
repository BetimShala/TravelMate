<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.travelmate.activities.HotelDetailsActivity"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="900dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/main_pic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Info"
                android:id="@+id/nameTxt"
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"

                android:layout_alignParentLeft="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/pin"
                    android:layout_below="@+id/pin"
                    android:layout_marginTop="17dp"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/hName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/info"
                    android:layout_alignStart="@+id/location"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="20dp"

                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/message"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/info"
                    android:text="location"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/info"
                    android:layout_below="@+id/info"
                    android:layout_marginTop="15dp"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/message"
                    android:layout_alignStart="@+id/location"
                    android:text="message..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@+id/price_night"
                    android:layout_alignStart="@+id/message"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/price_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/contact"
                    android:layout_below="@+id/message"
                    android:layout_marginTop="32dp"
                    android:text="price..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@+id/phone_contact"
                    android:layout_alignStart="@+id/price"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/phone_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/price_night"
                    android:layout_below="@+id/price"
                    android:layout_marginTop="25dp"
                    android:text="phone"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/phone_contact"
                    android:layout_marginTop="13dp"
                    android:layout_toStartOf="@+id/phone_contact"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignEnd="@+id/hName"
                    android:layout_alignTop="@+id/star1"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />


                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignTop="@+id/star2"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/star2"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />


                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignTop="@+id/star3"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/star3"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />


                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignTop="@+id/star4"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/star4"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop" />


            </RelativeLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>